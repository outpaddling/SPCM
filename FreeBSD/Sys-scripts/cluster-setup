#   Date        Name        Modification
#   2013-02-15  Charlie &   Begin
##########################################################################

update_system()
{
    line
    printf "Updating system clock...\n"
    stop_service ntpd
    ntpdate -u pool.ntp.org
    auto-enable-service ntpd cluster-setup > /dev/null 2>&1
    service ntpd restart
}


